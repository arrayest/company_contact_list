<div class="form-group">
<%= form_for(@phone, html: {class: "form-inline"}) do |f| %>
  <div class="form-group">
    <% if @phone.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@phone.errors.count, "error") %> prohibited this phone from being saved:</h2>

        <ul>
          <% @phone.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :contact_id, "联系人" %><br>
      <%= f.select :contact_id, options_from_collection_for_select(@contacts, "id", "name", (@contact.id rescue nil)), {prompt: "请选择联系人"}, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :phone_number, "手机号码" %><br>
      <%= f.text_field :phone_number, class: "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit "提交", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
</div>
